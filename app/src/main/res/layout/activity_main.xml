<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/kongbai"
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <LinearLayout
        android:id="@+id/layout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="欢迎进入New WeChat"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/kongbai1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            tools:ignore="DuplicateIds" />

        <ImageView
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:maxWidth="200px"
            android:maxHeight="200px"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/kongbai2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:ignore="DuplicateIds" />

        <requestFocus />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout01"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86  ：" />

        <EditText
            android:id="@+id/edt_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="12345678901"
            android:selectAllOnFocus="true" />

        <requestFocus />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout03"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout02"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码：" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:selectAllOnFocus="true" />

        <requestFocus />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout04"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout03"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kongbai2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:ignore="DuplicateIds" />

        <requestFocus />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout04"
        android:id="@+id/btn_send"
        android:text="登录" />

</RelativeLayout>



